<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingLeft="32dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rynel.mycalculator.MainActivity">

    <TextView
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:text="Input"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:onClick="buttonSeven"
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="7" />

        <Button
            android:onClick="buttonEight"
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="8" />
        <Button
            android:onClick="buttonNine"
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="9" />
        <Button
            android:onClick="buttonClearEverything"
            android:id="@+id/btnClear"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="CE" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:onClick="buttonFour"
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="4" />

        <Button
            android:onClick="buttonFive"
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="5" />
        <Button
            android:onClick="buttonSix"
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="6" />
        <Button
            android:onClick="buttonAddition"
            android:id="@+id/btnAddition"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:onClick="buttonOne"
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="1" />

        <Button
            android:onClick="buttonTwo"
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="2" />
        <Button
            android:onClick="buttonThree"
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="3" />
        <Button
            android:onClick="buttonSubtracr"
            android:id="@+id/btnSubtraction"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:onClick="buttonPower"
            android:id="@+id/btnPower"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="^" />
        <Button
            android:onClick="buttonEquals"
            android:id="@+id/btnEquals"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="=" />
        <Button
            android:onClick="buttonDivision"
            android:id="@+id/btnDivision"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="/" />

        <Button
            android:onClick="buttonMultiply"
            android:id="@+id/btnMultiply"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:text="x" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvUpdatedValue2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Result"
        android:layout_width="312dp"
        android:layout_height="wrap_content"/>

</LinearLayout>